{
    "mesh": {
       "file": "periodic_segment.mesh",
       "refine": 3
    },
    "space-dis": {
       "GD": true,
       "GD-degree": 1,
       "degree": 1,
       "lps-coeff": 1.0,
       "iface-coeff": 1.0,
       "basis-type": "dsbp"
    },
    "petscsolver": {
       "ksptype": "gmres",
