       "printlevel": 2
    },
    "steady": false,
    "bcs": {
        "sod-shock-left": [1, 0],
        "sod-shock-right": [0, 1]
     },
    "outputs":{
       "entropy": true
    },
    "time-dis": {
       "ode-solver": "RK4",
       "const-cfl": true,
       "cfl": 1.0,
       "dt": 0.002,
       "t-final": 0.2
    }
 }
 