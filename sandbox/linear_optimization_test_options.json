{
   "flow-param": {
      "mach": 1.0,
      "aoa": 0.0,
      "roll-axis": 0,
      "pitch-axis": 1
   },
   "space-dis": {
      "DGD": true,
      "DGD-degree": 1,
      "extra-basis": 0,
      "shape-param": 10.0,
      "degree": 1,
      "alpha": 1.0,
      "basis-type": "dsbp"
   },
   "steady": false,
   "time-dis": {
      "const-cfl": true,
      "res-exp": 2.0,
      "ode-solver": "PTC",
      "t-final": 1e15,
      "dt": 0.01,
      "cfl": 1.0,
      "max-iter": 1e4
   },
   "mesh": {
	   "file": "airfoil_steady.mesh",
      "refine": 0
   },
   "bcs": {
      "influx": [0, 1, 0, 0],
      "outflux": [0, 0, 1, 0]
   },
   "newton": {
      "printlevel": 1,
      "maxiter": 50,
      "reltol": 1e-14,
      "abstol": 1e-14
   },
   "petscsolver": {
      "ksptype": "gmres",
      "pctype": "lu",
      "abstol": 1e-15,
      "reltol": 1e-15,
      "maxiter": 100,
      "printlevel": 0
   },
   "lin-solver": {
      "printlevel": 0,
      "filllevel": 3,
      "maxiter": 100,
      "reltol": 1e-2,
      "abstol": 1e-12
   },
   "saveresults":false,
   "outputs":
   {
      "drag": [0, 0, 1, 1]
   },
   "shock-capturing": {
      "use": false,
      "sensor-param":1e-3,
      "k-param": 2.0,
      "eps-param": 1.0
   } 
}
