{
   "mesh": {
      "file": "sod_shock.mesh",
      "refine": 2
   },
   "space-dis": {
      "GD": false,
      "degree": 1,
      "lps-coeff": 1.0,
      "iface-coeff": 1.0,
      "basis-type": "H1"
   },
   "bcs": {
      "sod-shock-left": [1, 0],
      "sod-shock-right": [0, 1]
   },
   "newton": {
      "printlevel": 1,
      "maxiter": 100,
      "reltol": 1e-10,
      "abstol": 1e-10
   },
   "lin-solver": {
      "type": "hypregmres",
      "pctype": "hypreeuclid",
      "printlevel": 0,
      "maxiter": 100,
      "reltol": 1e-10,
      "abstol": 1e-10,
      "kdim": 100
   },
   "petscsolver": {
      "ksptype": "gmres",
      "pctype": "lu",
      "abstol": 1e-15,
      "reltol": 1e-15,
      "maxiter": 100,
      "printlevel": 2
   },
   "outputs": {
      "entropy": true
   },
   "steady": false, 
   "time-dis": {
      "ode-solver": "RK4",
      "const-cfl": true,
      "cfl": 1.0,
      "dt": 0.002,
      "t-final": 0.2
   }
}
