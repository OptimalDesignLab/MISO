{
   "silent" : false,
   "paraview": {
      "each-timestep": true,
      "directory": "airfoil-control"
   },
    "mesh": {
       "file": "airfoil_p2.mesh"
    },   
    "flow-param": {
       "viscous": true,
       "mach": 0.2,
       "aoa": 20.0,
       "roll-axis": 0,
       "pitch-axis": 1,
       "Re": 3500.0,
       "Pr": 0.72,
       "mu": -1.0
    },
    "space-dis": {
       "degree": 1,
       "lps-coeff": 1.0,
       "basis-type": "csbp",
       "flux-fun": "IR"
    },
    "time-dis": {
       "steady": false,
       "const-cfl": true,
       "type": "RRK",
       "exact-t-final": false,
       "t-final": 30.0,
       "dt": 0.05,
       "cfl": 5.0,
       "max-iter": 100000,
       "entropy-log": true
    }, 
    "bcs": {
       "control": [0, 0, 0, 1],
       "no-slip-adiabatic": [0, 0, 1, 0],
       "far-field": [1, 1, 0, 0]
    },
    "nonlin-solver": {
       "abstol": 1e-10,
       "maxiter": 50,
       "printlevel": 0,
       "reltol": 1e-6,
       "type": "newton"
    },
    "lin-solver": {
       "type": "fgmres",
       "printlevel": 1,
       "maxiter": 10,
       "reltol": 1e-2,
       "abstol": 1e-12
    },
    "lin-prec": {
       "ilu-reorder": 1,
       "ilu-type": 0,
       "lev-fill": 5,
       "printlevel": 0,
       "type": "hypreilu"
    },
    "saveresults":false,
    "outputs":
    {
        "each-timestep": true,
        "boundary-entropy": {
            "boundaries": [0, 0, 0, 1]
        },
        "entropy": {},
        "drag": {
            "boundaries": [0, 0, 1, 1]
        },
        "lift": {
            "boundaries": [0, 0, 1, 1]
        }
    }
 }
 